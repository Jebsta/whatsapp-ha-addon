#!/usr/bin/with-contenv bashio
# ==============================================================================
# Start the example service
# s6-overlay docs: https://github.com/just-containers/s6-overlay
# ==============================================================================

# Add your code here

# Declare variables
declare port

## Get port 3000/tcp from the user config options.
port=$(bashio::config 'port')


## Run your program
exec node /app/dist/src/index.js --port "${port}"
